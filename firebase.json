{
  "hosting": {
    "site": "ga-knowledge-hub",
    "public": "static",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "firebase_config/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "knowledge-hub",
          "region": "us-east1"
        }
      }
    ],
    "headers": [
      {
        "source": "*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0, s-maxage=0"
          }
        ]
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8081
    },
    "ui": {
      "enabled": true
    }
  }
}
