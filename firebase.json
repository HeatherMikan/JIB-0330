{
  "hosting": {
    "site": "gaknowledgehub",
    "public": "static",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "run" : {
        "serviceId": "knowledge-hub",
        "region": "us-east4"
      }
    }],
    "headers": [{
      "source": "*",
      "headers": [{
        "key": "Cache-Control",
        "value": "no-cache, max-age=0, s-maxage=0"
      }]
    }]
  }
}